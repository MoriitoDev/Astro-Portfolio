---
const socialLinks = [
  {
    name: "GitHub",
    url: "https://github.com/MoriitoDev",
    icon: "github",
    color: "hover:bg-gray-900 hover:text-white",
    label: "Check my code"
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/rafa-c%C3%B3rdoba-zafra-3a4a8b396/",
    icon: "linkedin",
    color: "hover:bg-[#0077b5] hover:text-white",
    label: "Let's connect"
  },
  {
    name: "Twitter / X",
    url: "https://x.com/Moriilull",
    icon: "twitter",
    color: "hover:bg-black hover:text-white",
    label: "Follow me"
  }
];
---

<section id="contact" class="relative w-full bg-gray-50 dark:bg-gray-950 border-t border-gray-200 dark:border-white/10 mt-24 transition-colors duration-300">
    
    <div class="absolute inset-0 opacity-[0.03] dark:opacity-[0.05] pointer-events-none" 
         style="background-image: radial-gradient(#4b5563 1px, transparent 1px); background-size: 32px 32px;">
    </div>

    <div class="max-w-6xl mx-auto px-6 py-24 min-h-[60vh] flex flex-col items-center justify-center font-recursive relative z-10">

        <div class="mb-12 text-center animate-on-scroll opacity-0 translate-y-4 transition-all duration-700">
            
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 shadow-sm mb-6 transition-colors">
                <span class="relative flex size-2">
                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                    <span class="relative inline-flex rounded-full size-2 bg-green-500"></span>
                </span>
                <span class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Available for work</span>
            </div>

            <h2 class="text-4xl lg:text-5xl font-semibold tracking-tight text-gray-900 dark:text-white mb-4 transition-colors">
                Let's keep in touch.
            </h2>
            <p class="text-lg text-gray-500 dark:text-gray-400 max-w-xl mx-auto font-light transition-colors">
                Got a project in mind? Let's build something amazing together.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 w-full max-w-5xl">
            
            <div class="md:col-span-2 relative group cursor-pointer animate-on-scroll opacity-0 translate-y-4 transition-all duration-500 delay-100">
                <div class="absolute -inset-2 bg-linear-to-r from-cyan-400 via-purple-400 to-pink-400 rounded-3xl blur-2xl opacity-25 group-hover:opacity-40 transition animate-pulse-siri duration-500"></div>
                
                <a href="mailto:rafacordobazafra@gmail.com" class="relative h-full flex flex-col justify-between overflow-hidden 
                   bg-white dark:bg-gray-900/80 
                   border border-gray-200/50 dark:border-white/10 
                   p-8 rounded-3xl shadow-sm hover:shadow-md hover:scale-[1.01] transition-all duration-300">
                    
                    <div class="z-10">
                        <div class="inline-flex items-center justify-center size-12 rounded-xl 
                                    bg-blue-50 dark:bg-blue-900/20 
                                    text-blue-600 dark:text-blue-400 
                                    mb-6 group-hover:scale-110 transition-transform duration-300">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                        </div>
                        <h3 class="text-2xl font-medium text-gray-900 dark:text-white mb-1 transition-colors">Send me an email</h3>
                        <p class="text-gray-500 dark:text-gray-400 transition-colors">rafacordobazafra@gmail.com</p>
                    </div>
                    
                    <div class="absolute -right-5 -bottom-5 opacity-5 dark:opacity-10 group-hover:opacity-10 transition-opacity duration-500 text-black dark:text-white">
                        <svg width="200" height="200" viewBox="0 0 24 24" fill="currentColor"><path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6zm-2 0l-8 5-8-5h16zm0 12H4V8l8 5 8-5v10z"/></svg>
                    </div>

                    <div class="mt-8 flex items-center text-sm font-semibold text-gray-400 dark:text-gray-500 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors uppercase tracking-widest">
                        Write Message <span class="ml-2 group-hover:translate-x-1 transition-transform">→</span>
                    </div>
                </a>
            </div>

            <div class="relative group animate-on-scroll opacity-0 translate-y-4 transition-all duration-500 delay-150">
                 <div class="relative h-full flex flex-col justify-center items-center text-center 
                             bg-white dark:bg-gray-900/80 
                             border border-gray-200/50 dark:border-white/10 
                             p-8 rounded-3xl shadow-sm hover:shadow-md hover:scale-[1.02] transition-all duration-300">
                    
                    <div class="relative size-24 mb-4 rounded-full overflow-hidden 
                                border-4 border-gray-50 dark:border-gray-800 
                                shadow-inner flex items-center justify-center 
                                bg-gray-50 dark:bg-gray-800 transition-colors">
                         <svg class="text-gray-400 dark:text-gray-500" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 dark:text-white transition-colors">Based in</h3>
                    <p class="text-gray-500 dark:text-gray-400 transition-colors">Córdoba, Spain</p>
                 </div>
            </div>

            {socialLinks.map((link, index) => (
                <a href={link.url} target="_blank" rel="noopener noreferrer" 
                   class={`relative group flex flex-col justify-between p-6 
                          bg-white dark:bg-gray-900/80 
                          border border-gray-200/50 dark:border-white/10 
                          rounded-3xl shadow-sm transition-all duration-300 
                          hover:shadow-md hover:scale-[1.03] ${link.color} 
                          animate-on-scroll opacity-0 translate-y-4 duration-500`}
                   style={`transition-delay: ${50 + (index * 50)}ms`}
                >
                    <div class="flex justify-between items-start">
                        <div class="p-3 bg-gray-50 dark:bg-gray-800 rounded-2xl group-hover:bg-white/20 group-hover:text-white transition-colors text-gray-700 dark:text-gray-300">
                            {link.icon === 'github' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>}
                            {link.icon === 'linkedin' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>}
                            {link.icon === 'twitter' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4l11.733 16h4.267l-11.733 -16z" /><path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772" /></svg>}
                            {link.icon === 'instagram' && <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="20" x="2" y="2" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>}
                        </div>
                        <div class="text-gray-300 dark:text-gray-600 group-hover:text-white/80 transform rotate-45 group-hover:rotate-0 transition-all duration-300">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 7h10v10"/><path d="M7 17 17 7"/></svg>
                        </div>
                    </div>
                    <div class="mt-8">
                        <p class="text-xs font-semibold text-gray-400 dark:text-gray-500 uppercase tracking-wider mb-1 group-hover:text-white/70">{link.label}</p>
                        <h4 class="text-lg font-medium text-gray-900 dark:text-white group-hover:text-white transition-colors">{link.name}</h4>
                    </div>
                </a>
            ))}

        </div>
    </div>
</section>

<script>
    const observerOptions = {
        root: null,
        rootMargin: '0px',
        threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.remove('opacity-0', 'translate-y-4');
                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);

    document.querySelectorAll('.animate-on-scroll').forEach((el) => {
        observer.observe(el);
    });
</script>

<style>

.animate-pulse-siri {
    animation: pulse-siri 4s ease-in-out infinite;
  }

</style>