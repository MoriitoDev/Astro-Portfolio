---
import Image from "astro/components/Image.astro";
import pfp from "../assets/pfp.webp";
---

<main class="mt-24 font-recursive animate-enter delay-200 min-h-[80vh]">
  <div
    class="ml-32 font-recursive h-fit tracking-tight font-semibold flex flex-row align-middle items-center mt-10"
  >
    <h1 class="text-5xl dark:text-white transition-colors duration-300">Hey, I'm</h1>
    
    <Image 
      src={pfp} 
      alt="Rafa"
      width={400} 
      format="png"
      quality={"max"}
      class="size-48 scale-50 rounded-3xl border-[6px] border-white dark:border-gray-500 shadow-2xl -rotate-5 hover:rotate-0 transition-all duration-300 ease-out transform-gpu will-change-transform -ml-6 -mr-6"
    />
    <h1 class="text-5xl dark:text-white transition-colors duration-300">Rafa.</h1>
    <br />
  </div>

  <div class="ml-32 font-recursive tracking-tight flex flex-row -mt-4">
    <h1 class="text-5xl font-semibold leading-tight dark:text-gray-100 transition-colors duration-300">
      And I design Modern and
      <span class="relative inline-block">
        <span class="relative z-10">Aesthetic</span>

        <svg
          viewBox="0 0 200 20"
          preserveAspectRatio="none"
          class="absolute -bottom-2 left-0 w-[105%] h-5 text-[#4a80d9] opacity-90 -rotate-1 pointer-events-none"
        >
          <path
            class="animate-scribble"
            d="M5 12 C 50 10, 150 10, 195 12 C 140 18, 60 20, 10 18"
            stroke="currentColor"
            stroke-width="3"
            fill="transparent"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </span>
      websites.
    </h1>
  </div>

  <div
    class="ml-32 mt-10 font-recursive tracking-tight flex flex-col gap-8 animate-enter delay-200"
  >
    <div class="flex flex-col gap-3">
      <h2
        class="text-lg font-bold text-gray-900/85 dark:text-gray-200 uppercase tracking-widest pl-1 transition-colors duration-300"
      >
        Current Focus
      </h2>

      <div class="flex flex-row gap-4">
        <div class="relative group">
          <div
            class="p-3 bg-white dark:bg-gray-800/50 
                   border border-gray-200 dark:border-white/10 
                   rounded-2xl shadow-sm 
                   hover:shadow-md 
                   hover:border-blue-300 dark:hover:border-blue-500/50 
                   hover:bg-blue-50 dark:hover:bg-blue-900/20 
                   transition-all duration-300 cursor-default"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-gray-600 dark:text-gray-400 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors"
            >
              <rect x="2" y="4" width="20" height="16" rx="2"></rect><path
                d="M10 4v4"></path><path d="M2 8h20"></path><path d="M6 4v4"
              ></path>
            </svg>
          </div>
          <div
            class="absolute bottom-full left-1/2 -translate-x-1/2 mb-3 px-3 py-1.5 
                   bg-white/80 dark:bg-gray-800/90 
                   backdrop-blur-xl 
                   border border-white/40 dark:border-white/10 
                   shadow-xl rounded-lg text-xs font-medium 
                   text-gray-800 dark:text-gray-200 
                   whitespace-nowrap opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 scale-95 group-hover:scale-100 transition-all duration-300 ease-out origin-bottom pointer-events-none z-20"
          >
            Web Development
          </div>
        </div>

        <div class="relative group">
          <div
            class="p-3 bg-white dark:bg-gray-800/50 
                   border border-gray-200 dark:border-white/10 
                   rounded-2xl shadow-sm 
                   hover:shadow-md 
                   hover:border-purple-300 dark:hover:border-purple-500/50 
                   hover:bg-purple-50 dark:hover:bg-purple-900/20 
                   transition-all duration-300 cursor-default"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-pen-tool-icon lucide-pen-tool text-gray-600 dark:text-gray-400 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors"
              ><path
                d="M15.707 21.293a1 1 0 0 1-1.414 0l-1.586-1.586a1 1 0 0 1 0-1.414l5.586-5.586a1 1 0 0 1 1.414 0l1.586 1.586a1 1 0 0 1 0 1.414z"
              ></path><path
                d="m18 13-1.375-6.874a1 1 0 0 0-.746-.776L3.235 2.028a1 1 0 0 0-1.207 1.207L5.35 15.879a1 1 0 0 0 .776.746L13 18"
              ></path><path d="m2.3 2.3 7.286 7.286"></path><circle
                cx="11"
                cy="11"
                r="2"></circle></svg
            >
          </div>
          <div
            class="absolute bottom-full left-1/2 -translate-x-1/2 mb-3 px-3 py-1.5 
                   bg-white/80 dark:bg-gray-800/90 
                   backdrop-blur-xl 
                   border border-white/40 dark:border-white/10 
                   shadow-xl rounded-lg text-xs font-medium 
                   text-gray-800 dark:text-gray-200 
                   whitespace-nowrap opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 scale-95 group-hover:scale-100 transition-all duration-300 ease-out origin-bottom pointer-events-none z-20"
          >
            UI Design
          </div>
        </div>
      </div>
    </div>

    <div class="flex flex-col gap-3">
      <h2
        class="text-lg font-bold text-gray-900/85 dark:text-gray-200 uppercase tracking-widest pl-1 transition-colors duration-300"
      >
        Downtime & Hobbies
      </h2>

      <div class="flex flex-row gap-4">
        <div class="relative group">
          <div
            class="p-3 bg-white dark:bg-gray-800/50 
                   border border-gray-200 dark:border-white/10 
                   rounded-2xl shadow-sm 
                   hover:shadow-md 
                   hover:border-rose-300 dark:hover:border-rose-500/50 
                   hover:bg-rose-50 dark:hover:bg-rose-900/20 
                   transition-all duration-300 cursor-default"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-dumbbell-icon lucide-dumbbell text-gray-600 dark:text-gray-400 group-hover:text-rose-600 dark:group-hover:text-rose-400 transition-colors"
              ><path
                d="M17.596 12.768a2 2 0 1 0 2.829-2.829l-1.768-1.767a2 2 0 0 0 2.828-2.829l-2.828-2.828a2 2 0 0 0-2.829 2.828l-1.767-1.768a2 2 0 1 0-2.829 2.829z"
              ></path><path d="m2.5 21.5 1.4-1.4"></path><path
                d="m20.1 3.9 1.4-1.4"></path><path
                d="M5.343 21.485a2 2 0 1 0 2.829-2.828l1.767 1.768a2 2 0 1 0 2.829-2.829l-6.364-6.364a2 2 0 1 0-2.829 2.829l1.768 1.767a2 2 0 0 0-2.828 2.829z"
              ></path><path d="m9.6 14.4 4.8-4.8"></path></svg
            >
          </div>
          <div
            class="absolute bottom-full left-1/2 -translate-x-1/2 mb-3 px-3 py-1.5 
                   bg-white/80 dark:bg-gray-800/90 
                   backdrop-blur-xl 
                   border border-white/40 dark:border-white/10 
                   shadow-xl rounded-lg text-xs font-medium 
                   text-gray-800 dark:text-gray-200 
                   whitespace-nowrap opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 scale-95 group-hover:scale-100 transition-all duration-300 ease-out origin-bottom pointer-events-none z-20"
          >
            Boxing
          </div>
        </div>

        <div class="relative group">
          <div
            class="p-3 bg-white dark:bg-gray-800/50 
                   border border-gray-200 dark:border-white/10 
                   rounded-2xl shadow-sm 
                   hover:shadow-md 
                   hover:border-amber-900 dark:hover:border-amber-500/50 
                   hover:bg-amber-50 dark:hover:bg-amber-900/20 
                   transition-all duration-300 cursor-default"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-panda-icon lucide-panda text-gray-600 dark:text-gray-400 group-hover:text-amber-900 dark:group-hover:text-amber-400 transition-colors"
              ><path d="M11.25 17.25h1.5L12 18z"></path><path d="m15 12 2 2"
              ></path><path d="M18 6.5a.5.5 0 0 0-.5-.5"></path><path
                d="M20.69 9.67a4.5 4.5 0 1 0-7.04-5.5 8.35 8.35 0 0 0-3.3 0 4.5 4.5 0 1 0-7.04 5.5C2.49 11.2 2 12.88 2 14.5 2 19.47 6.48 22 12 22s10-2.53 10-7.5c0-1.62-.48-3.3-1.3-4.83"
              ></path><path d="M6 6.5a.495.495 0 0 1 .5-.5"></path><path
                d="m9 12-2 2"></path></svg
            >
          </div>
          <div
            class="absolute bottom-full left-1/2 -translate-x-1/2 mb-3 px-3 py-1.5 
                   bg-white/80 dark:bg-gray-800/90 
                   backdrop-blur-xl 
                   border border-white/40 dark:border-white/10 
                   shadow-xl rounded-lg text-xs font-medium 
                   text-gray-800 dark:text-gray-200 
                   whitespace-nowrap opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 scale-95 group-hover:scale-100 transition-all duration-300 ease-out origin-bottom pointer-events-none z-20"
          >
            Anime
          </div>
        </div>

        <div class="relative group">
          <div
            class="p-3 bg-white dark:bg-gray-800/50 
                   border border-gray-200 dark:border-white/10 
                   rounded-2xl shadow-sm 
                   hover:shadow-md 
                   hover:border-emerald-300 dark:hover:border-emerald-500/50 
                   hover:bg-emerald-50 dark:hover:bg-emerald-900/20 
                   transition-all duration-300 cursor-default"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-gray-600 dark:text-gray-400 group-hover:text-emerald-600 dark:group-hover:text-emerald-400 transition-colors"
            >
              <path d="M9 18V5l12-2v13"></path><circle cx="6" cy="18" r="3"
              ></circle><circle cx="18" cy="16" r="3"></circle>
            </svg>
          </div>
          <div
            class="absolute bottom-full left-1/2 -translate-x-1/2 mb-3 px-3 py-1.5 
                   bg-white/80 dark:bg-gray-800/90 
                   backdrop-blur-xl 
                   border border-white/40 dark:border-white/10 
                   shadow-xl rounded-lg text-xs font-medium 
                   text-gray-800 dark:text-gray-200 
                   whitespace-nowrap opacity-0 group-hover:opacity-100 translate-y-2 group-hover:translate-y-0 scale-95 group-hover:scale-100 transition-all duration-300 ease-out origin-bottom pointer-events-none z-20"
          >
            Music
          </div>
        </div>
      </div>
    </div>

    <div class="mt-4 relative w-full max-w-137 group cursor-pointer">
      <div
        class="absolute -inset-2 bg-linear-to-r from-cyan-400 via-purple-400 to-pink-400 rounded-[20px] blur-2xl opacity-25 group-hover:opacity-50 animate-pulse-siri transition duration-500"
      >
      </div>

      <a
        href="#contact"
        class="relative flex items-center justify-between 
               bg-white/60 dark:bg-gray-900/80 
               backdrop-blur-xl 
               border border-white/80 dark:border-white/10 
               shadow-sm rounded-xl px-4 py-3 
               hover:scale-[1.01] transition-all duration-300"
      >
        <div class="flex flex-col ml-2">
          <span class="text-xl font-light text-gray-800 dark:text-gray-100 tracking-tight transition-colors"
            >Let's build something together</span
          >
          <span
            class="text-[10px] font-bold text-gray-400 dark:text-gray-500 uppercase tracking-widest mt-0.5 group-hover:text-blue-500 dark:group-hover:text-blue-400 transition-colors"
            >Contact me <span class="text-blue-500/80 dark:text-blue-400/80">press enter</span> </span>
        </div>

        <div
          class="flex items-center justify-center size-9 
                 bg-gradient-to-b from-gray-50 to-gray-100 
                 dark:from-gray-800 dark:to-gray-900 
                 border border-gray-200 border-b-2 
                 dark:border-gray-700 dark:border-b-gray-600
                 rounded-lg 
                 group-hover:border-blue-300 dark:group-hover:border-blue-500/50 
                 transition-colors shadow-sm"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-gray-400 dark:text-gray-500 group-hover:text-blue-500 dark:group-hover:text-blue-400"
          >
            <path d="M9 10L4 15L9 20"></path>
            <path d="M20 4V11C20 13.2091 18.2091 15 16 15H4"></path>
          </svg>
        </div>
      </a>
    </div>
  </div>
</main>

<script>
  const contactSection = document.getElementById('contact');

  // Aseguramos que el script se ejecute correctamente en Astro
  // Usamos 'keydown' directamente en document para mejor respuesta
  document.addEventListener('keydown', (event) => {
      if (event.key === 'Enter') {
        event.preventDefault();
        if (contactSection) {
          contactSection.scrollIntoView({ 
            behavior: 'smooth' 
          });
        }
      }
  });
</script>

<style>
  @keyframes draw {
    to {
      stroke-dashoffset: 0;
    }
  }

  .animate-scribble {
    stroke-dasharray: 400;
    stroke-dashoffset: 400;
    animation: draw 0.8s ease-out 0.8s forwards;
  }

  @keyframes enter-slide-up {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-enter {
    opacity: 0;
  }

  @media (prefers-reduced-motion: no-preference) {
    .animate-enter {
      animation: enter-slide-up 3s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
  }

  .delay-100 {
    animation-delay: 100ms;
  }
  .delay-200 {
    animation-delay: 200ms;
  }
  .delay-300 {
    animation-delay: 300ms;
  }
  .delay-500 {
    animation-delay: 500ms;
  }

  @keyframes pulse-siri {
    0%,
    100% {
      opacity: 0.3;
      transform: scale(0.98);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.01);
    }
  }

  .animate-pulse-siri {
    animation: pulse-siri 4s ease-in-out infinite;
  }
</style>