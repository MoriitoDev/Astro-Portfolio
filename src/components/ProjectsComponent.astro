---
import frontTools from "../assets/front-tools.png?url"
import wiku from "../assets/wiku.webp?url"
import portfolio from "../assets/portfolio.webp?url"
---

<div id="projects" class="font-inter flex flex-col w-[98%] m-auto mb-20 p-10 
            bg-gray-200 dark:bg-gray-900/60 
            backdrop-blur-xl 
            border border-white/40 dark:border-white/10 
            shadow-xl rounded-3xl 
            animate-on-scroll opacity-0 translate-y-8 transition-all duration-700 ease-out">

    <div class="flex flex-row items-center ml-12">
        <div class="p-2 bg-gray-950 text-gray-100 dark:bg-white dark:text-black rounded-xl mr-3 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-briefcase-icon lucide-briefcase"><path d="M16 20V4a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/><rect width="20" height="14" x="2" y="6" rx="2"/></svg>
        </div>
        <h1 class="text-3xl font-semibold text-black dark:text-white text-left transition-colors"> Meet my Work</h1>
    </div>
        
    <div class="flex flex-col gap-5 justify-center items-center">
        <div class="flex flex-row gap-8 justify-center mt-10 px-10">
        
            <div class="group flex flex-col h-[520px] w-[460px] p-5
                        bg-white/50 dark:bg-gray-800/40 
                        backdrop-blur-2xl 
                        border border-white/40 dark:border-white/5 
                        shadow-sm
                        rounded-[2rem] 
                        hover:shadow-[0_20px_40px_-12px_rgba(0,0,0,0.1)] 
                        hover:bg-white/60 dark:hover:bg-gray-800 
                        hover:-translate-y-1
                        transition-all duration-500
                        animate-on-scroll opacity-0 translate-y-8 delay-100">
            
                <div class="relative w-full h-[300px] rounded-[1.5rem] overflow-hidden shadow-sm border border-black/5 dark:border-white/5 mb-6">
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors duration-500 z-10"></div>
                    <img src={frontTools} alt="Frontend Tools" class="w-full h-full object-cover transform transition-transform duration-700 group-hover:scale-105"/>
                </div>

                <div class="flex flex-col px-1">
                    <div class="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-gray-400 dark:text-gray-500 mb-2 font-recursive">
                        <span>2026</span>
                        <span class="text-gray-300 dark:text-gray-600">•</span> <span>Free to use</span>
                        <span class="text-gray-300 dark:text-gray-600">•</span>
                        <span class="text-blue-500 dark:text-blue-400">UI Design</span> </div>

                    <h3 class="text-3xl font-recursive font-semibold text-gray-800 dark:text-gray-100 tracking-tight leading-tight mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                        Front Tools
                    </h3>

                    <p class="text-sm text-gray-500 dark:text-gray-400 font-medium leading-relaxed line-clamp-2">
                        Essential toolkit for modern frontend development.
                    </p>
                </div>
            
                <div class="mt-auto self-end">
                    <a href="https://frontdev-tools.pages.dev/" target="_blank" class="w-10 h-10 rounded-full bg-gray-100/50 dark:bg-gray-700/50 group-hover:bg-blue-600 dark:group-hover:bg-blue-500 text-gray-400 dark:text-gray-300 group-hover:text-white flex items-center justify-center transition-all duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                    </a>
                </div>
            </div>

            <div class="group flex flex-col h-[520px] w-[460px] p-5
                        bg-white/50 dark:bg-gray-800/40 
                        backdrop-blur-2xl 
                        border border-white/40 dark:border-white/5 
                        shadow-sm
                        rounded-[2rem] 
                        hover:shadow-[0_20px_40px_-12px_rgba(0,0,0,0.1)] 
                        hover:bg-white/60 dark:hover:bg-gray-800 
                        hover:-translate-y-1
                        transition-all duration-500
                        animate-on-scroll opacity-0 translate-y-8 delay-200">
            
                <div class="relative w-full h-[300px] rounded-[1.5rem] overflow-hidden shadow-sm border border-black/5 dark:border-white/5 mb-6">
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors duration-500 z-10"></div>
                    <img src={wiku} alt="Wiku" class="w-full h-full object-cover transform transition-transform duration-700 group-hover:scale-105"/>
                </div>

                <div class="flex flex-col px-1">
                    <div class="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-gray-400 dark:text-gray-500 mb-2 font-recursive">
                        <span>2025</span>
                        <span class="text-gray-300 dark:text-gray-600">•</span>
                        <span>AI Utility</span>
                        <span class="text-gray-300 dark:text-gray-600">•</span>
                        <span class="text-amber-500 dark:text-amber-400">AI Assistant</span>
                    </div>

                    <h3 class="text-3xl font-recursive font-semibold text-gray-800 dark:text-gray-100 tracking-tight leading-tight mb-2 group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors">
                        Wiku
                    </h3>

                    <p class="text-sm text-gray-500 dark:text-gray-400 font-medium leading-relaxed line-clamp-2">
                        AI study assistant, using free AI models.
                    </p>
                </div>
            
                <div class="mt-auto self-end">
                    <a href="https://github.com/MoriitoDev/Wiku" target="_blank" class="w-10 h-10 rounded-full bg-gray-100/50 dark:bg-gray-700/50 group-hover:bg-amber-600 dark:group-hover:bg-amber-500 text-gray-400 dark:text-gray-300 group-hover:text-white flex items-center justify-center transition-all duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                    </a>
                </div>
            </div>

        </div>

        <div class="flex flex-row gap-8 justify-center mt-10 px-10">

            <div class="group flex flex-col h-[520px] w-[460px] p-5
                        bg-white/50 dark:bg-gray-800/40 
                        backdrop-blur-2xl 
                        border border-white/40 dark:border-white/5 
                        shadow-sm
                        rounded-[2rem] 
                        hover:shadow-[0_20px_40px_-12px_rgba(0,0,0,0.1)] 
                        hover:bg-white/60 dark:hover:bg-gray-800 
                        hover:-translate-y-1
                        transition-all duration-500
                        animate-on-scroll opacity-0 translate-y-8 delay-300">
            
                <div class="relative w-full h-[300px] rounded-[1.5rem] overflow-hidden shadow-sm border border-black/5 dark:border-white/5 mb-6">
                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors duration-500 z-10"></div>
                    <img src={portfolio} alt="Personal portfolio" class="w-full h-full object-cover transform transition-transform duration-700 group-hover:scale-105"/>
                </div>

                <div class="flex flex-col px-1">
                    <div class="flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-gray-400 dark:text-gray-500 mb-2 font-recursive">
                        <span>2026</span>
                        <span class="text-gray-300 dark:text-gray-600">•</span>
                        <span class="text-blue-500 dark:text-blue-400">Tailwind CSS</span>
                        <span class="text-gray-300 dark:text-gray-600">•</span>
                        <span class="text-orange-400 dark:text-orange-300">Astro</span>
                        <span class="text-gray-300 dark:text-gray-600">•</span>
                        <span class="text-[#f63b3b] dark:text-red-400">UI Design</span> </div>

                    <h3 class="text-3xl font-recursive font-semibold text-gray-800 dark:text-gray-100 tracking-tight leading-tight mb-2 group-hover:text-[#fe2a2a] dark:group-hover:text-red-400 transition-colors">
                        Portfolio
                    </h3>

                    <p class="text-sm text-gray-500 dark:text-gray-400 font-medium leading-relaxed line-clamp-2">
                        Personal portfolio, made using Astro & Tailwind CSS.
                    </p>
                </div>
            
                <div class="mt-auto self-end">
                    <a href="https://github.com/MoriitoDev/Astro-Portfolio" target="_blank" class="w-10 h-10 rounded-full bg-gray-100/50 dark:bg-gray-700/50 group-hover:bg-[#fe2a2a] dark:group-hover:bg-red-500 text-gray-400 dark:text-gray-300 group-hover:text-white flex items-center justify-center transition-all duration-300">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                    </a>
                </div>
            </div>

        </div>

    </div>

</div>

<script>
    const observerOptions = {
        root: null,
        rootMargin: '0px',
        threshold: 0.1
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.remove('opacity-0', 'translate-y-8');
                observer.unobserve(entry.target);
            }
        });
    }, observerOptions);

    document.querySelectorAll('.animate-on-scroll').forEach((el) => {
        observer.observe(el);
    });
</script>